<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/expandableListPersonGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        tools:text="Person" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/expandableListPersonGender">

        <TextView
            android:id="@+id/expandableListPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Person's Name" />

        <TextView
            android:id="@+id/expandableListPersonRelationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Person's relationship" />
    </LinearLayout>

</RelativeLayout>